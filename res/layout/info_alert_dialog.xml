<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inf_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="#DAAA"
     >

     <ImageView
         android:id="@+id/inf_dialog_picture"
         android:layout_width="wrap_content"
         android:layout_height="fill_parent"
         android:layout_marginRight="10dp"
         android:src="@drawable/ic_launcher" />

     <LinearLayout 
         android:layout_width="wrap_content"
         android:layout_height="fill_parent"
         android:orientation="vertical">

         <TextView
             android:id="@+id/inf_text_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/About_inf"
             android:textColor="#FFF" />

         <TextView
             android:id="@+id/inf_text_email"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/About_email"
             android:textColor="#FFF" />

         <TextView
             android:id="@+id/inf_text_year"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/About_year"
             android:textColor="#FFF" />

     </LinearLayout>
    

</LinearLayout>